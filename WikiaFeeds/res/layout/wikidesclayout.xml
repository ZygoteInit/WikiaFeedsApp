<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#444849"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgwiki"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txtdesc"
        android:layout_width="260dp"
         android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:maxLines="6"
        android:textColor="@android:color/white"
         android:text=""
        android:layout_gravity="center"
        android:inputType="textMultiLine"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
      <TextView
        android:id="@+id/txtstats"
        android:layout_width="wrap_content"
         android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:text="Wikia Stats"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:layout_gravity="bottom"
         >

        <TextView
            android:id="@+id/txtusers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_marginLeft="19dp"
            android:layout_toRightOf="@+id/imageView2"
            android:text="users"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/txtactiveusers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignLeft="@+id/txtusers"
            android:textColor="@android:color/white"
            android:text="acusers"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/txtimages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:paddingRight="15dp"
            android:text="images"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/txtpages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView6"
            android:layout_alignLeft="@+id/txtactiveusers"
            android:textColor="@android:color/white"
            android:text="pages"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_alignTop="@+id/txtactiveusers"
            android:src="@drawable/articles" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:src="@drawable/pages" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/txtvideos"
            android:layout_toLeftOf="@+id/txtusers"
            android:src="@drawable/edits" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/txtvideos"
            android:layout_alignLeft="@+id/imageView4"
            android:src="@drawable/videos" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/imageView6"
            android:layout_alignLeft="@+id/imageView8"
            android:layout_marginBottom="16dp"
            android:src="@drawable/activeusers" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/imageView8"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/txtimages"
            android:src="@drawable/images" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtimages"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="33dp"
            android:src="@drawable/users" />

        <TextView
            android:id="@+id/txtvideos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView3"
            android:layout_alignLeft="@+id/txtimages"
            android:paddingRight="30dp"
            android:text="97"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtedits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView8"
            android:layout_alignLeft="@+id/txtusers"
            android:text="edits"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtarticles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView7"
            android:layout_toRightOf="@+id/imageView4"
            android:paddingRight="15dp"
            android:text="10205"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</LinearLayout>
